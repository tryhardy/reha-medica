            section.scope
                img.scope_bg.shown(src="/images/Rectangle.jpg", alt="" data-scope="1")
                img.scope_bg(src="/images/Rectangle.jpg", alt="" data-scope="2")
                img.scope_bg(src="/images/Rectangle.jpg", alt="" data-scope="3")
                .container
                    .inner
                    h2.section_title.scope_title.fz-40 Области клинического <span class="vine-colored">применения</span>
                    .scope_row
                        ul.scope_list
                        li.scope_item
                            a.scope_link__active(href="#" data-scope="1") Неврология
                        li.scope_item
                            a(href="#" data-scope="2") Терапия/Кардиология
                        li.scope_item
                            a(href="#" data-scope="3") Психиатрия
                        .scope_cards.shown-flex(data-scope="1")
                            mixin scope-card(title, link)
                                .scope_cards__item
                                    span.card_title= title
                                    a.card_link(href=link) Подробнее
                                    img(src= imgroot + "arrow-right.svg", alt="")

                            +scope-card('Aртериальная гипертензия', '#')
                            +scope-card('ССЗ и соматоформные,  астенические, тревожные расстройства', '#')
                            +scope-card('Когнитивные расстройства у женщин с климактерическим синдромом', '#')
