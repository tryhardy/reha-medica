                            +scope-card('Aртериальная гипертензия', '#')
                            +scope-card('ССЗ и соматоформные,  астенические, тревожные расстройства', '#')
                            +scope-card('ХСН II-III ФК', '#')
                        .scope_cards(data-scope="3")
                            +scope-card('ХСН II-III ФК', '#')
